@using ETickets.Data.ViewModels
@model ShoppingCartViewModel
@{
    ViewBag.Titel = "Shopping Cart Summary";
}
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="text-center">
            <h2>Shopping Cart</h2>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Selected amount</th>
                    <th>Movie</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString("C")</td>
                        <td class="align-middle">@((item.Amount * item.Movie.Price).ToString("C"))</td>
                        <td class="align-middle d-flex justify-content-between">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2">@Model.ShoppingCartTotal.ToString("C")</td>
                </tr>
            </tfoot>
        </table>
        <div class="d-flex justify-content-around">
            <div class="mx-2 btn" id="paypal-btn"></div>
            <div>
                <a class="btn btn-outline-success mx-2" asp-controller="Movie" asp-action="Index">Add more items</a>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://www.paypal.com/sdk/js?client-id=AY94aH0FisBsxCMca3jgCVRfbDjVB24L_LnnfWP7NwGWJ7tnFnwAwXKIZI1IdAYwl5ecTBCrZffi3x84"></script>
    <script>
        let _total = @Html.Raw(Model.ShoppingCartTotal);

        paypal.Buttons({
            style: {
                size: "small",
                color: "gold",
                shape: "pill"
            },

            // Create order
            createOrder: function (data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: _total
                        }
                    }]
                });
            },

            // Capture order
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    // Redirect after successful payment
                    var url = "@Url.Action("CompleteOrder", "Orders")";
                    window.location.href = url;
                });
            }

        }).render("#paypal-btn"); // renders button inside your div
    </script>
}