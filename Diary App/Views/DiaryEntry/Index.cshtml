@model List<DiaryEntry>
<div class="container mt-5">

    <div class="btn btn-lg btn-primary">
        <a class="text-white" style="text-decoration: none" asp-area="" asp-controller="DiaryEntry" asp-action="Create">Create new Diary Entry</a>
    </div>
</div>
<div class="container mt-5">
    <h1 class="offcanvas-title">
        Diary Entries
    </h1>
</div>
<div class="table-responsive mt-5">
<table class="table table-striped table-hover">
    <thead>
    <tr>
                <td><strong>Title</strong></td>
                <td><strong>Content</strong></td>
                <td><strong>Created</strong></td>
                <td><strong>Action</strong></td>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.Created</td>
                <td>
                        <a class="btn btn-primary btn-sm" asp-controller="DiaryEntry" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form asp-controller="DiaryEntry" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this entry?');">
                                Delete
                            </button>
                        </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>