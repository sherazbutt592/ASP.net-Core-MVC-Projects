@model IEnumerable<Product>
@{
    ViewBag.Title = "Menu Items";
}
@functions{
    string GetDeleteModalId(Product product)
    {
        return "#deleteModal" + product.ProductId;
    }
    string GetModalId(Product product)
    {
        return "deleteModal" + product.ProductId;
    }
}
<h2>Menu Items</h2>
<a asp-action="AddEdit" asp-asp-controller="Product" class="btn btn-primary">Create New Item</a>
<div class="row">
    @foreach(Product item in Model)
    {
        <div class="col-md-4">
            <form asp-action="Delete" asp-controller="Product" method="post">
                <input type="hidden" name="id" value="@item.ProductId" />
                <div class="card" style="width: 18rem;">
                    <img src="@Url.Content("~/images/"+item.ImageUrl)" class="card-img-top fixed-image-height" alt="image not found" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Price.ToString("C")</p>
                        <p class="card-text">Quantity in Stock: @item.Stock</p>
                        <a class="btn btn-info" asp-action="AddEdit" asp-route-id="@item.ProductId"> <i class="bi bi-pencil-fill">Edit</i></a>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(item)">
                            Delete
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="@GetModalId(item)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Alert</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure to delete this item.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
               </div>
            </form>
        </div>
    }
</div>
